<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TEditor.Views"
             xmlns:Models="clr-namespace:TEditor.Models"
             xmlns:viewmodels="clr-namespace:TEditor.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:DocViewModel}"
             x:Class="TEditor.Views.DocControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="文档设置"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="W" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Width, Mode=TwoWay}" Width="60"/>
                <TextBlock Text="H" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Height, Mode=TwoWay}" Width="60"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
